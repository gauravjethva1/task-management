{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS", 
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "./",
    "sourceMap": true,
    "paths": {
      "*": ["src/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}
